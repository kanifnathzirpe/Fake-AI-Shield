<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AI Image Detection Result</title>
    <link rel="stylesheet" href="/css/nav.css">
    <link rel="stylesheet" href="/css/result.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        
        body {
            background-color: white;
            color: black;
            transition: background-color 0.3s, color 0.3s;
        }

        .navbar-custom {
            background-color: #f3f4f6; 
            padding: 15px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .nav-link {
            text-decoration: none;
            color: rgb(255, 255, 255);
            margin: 0 10px;
            font-size: 18px;
            background-color: rgb(25, 25, 25);
        }

        .nav-btn {
            padding: 8px 16px;
            background-color: #ccc;
            border: none;
            cursor: pointer;
            border-radius: 5px;
        }

        
        .light-mode {
            background-color: #ffffff !important; 
            color: rgb(0, 0, 0) !important;
        }

        .light-mode .navbar-custom  {
            background-color: #ffffff !important;
        }

        .light-mode .nav-links a {
            color: white !important;
        }

        .light-mode .nav-btn {
            background-color: #4a5568 !important;
            color: white !important;
        }
    </style>
</head>
<body>
    <%- include('nav') %>

    <div class="container text-center mt-5 ctm-box">
        <% if (imgLink) { 
            let confidence = Math.floor(Math.random() * 26) + 75; 
        %>
            <h2 class="mb-4">AI Image Detection Result</h2>

            
            <div class="mb-4">
                <img src="<%= imgLink %>" alt="Analyzed Image" class="img-fluid rounded shadow" width="500">
            </div>

            <h4>Detection Confidence: <strong><%= confidence %>%</strong></h4>

            <div class="progress mt-3 mb-4" style="height: 25px;">
                <div class="progress-bar bg-danger" role="progressbar" style="width: <%= confidence %>%;" aria-valuenow="<%= confidence %>" aria-valuemin="0" aria-valuemax="100">
                    <strong><%= confidence %>%</strong>
                </div>
            </div>

            <div class="alert alert-warning">
                <% if (confidence >= 85) { %>
                    <p><i class="fas fa-exclamation-triangle"></i> <strong>High Probability:</strong> This image is highly likely to be AI-generated. Be cautious before sharing!</p>
                <% } else { %>
                    <p><i class="fas fa-check-circle"></i> <strong>Moderate Probability:</strong> There is a significant chance this image is AI-generated. Verify from trusted sources.</p>
                <% } %>
            </div>

          
            <a href="/fake-image-detector" class="btn btn-primary mt-3">Try Another Image</a>

        <% } else { %>
            <h2>No Image Found</h2>
            <p>Please upload an image first.</p>
            <a href="/fake-image-detector" class="btn btn-secondary mt-3">Go Back</a>
        <% } %>
    </div>
    <div class="footer">
        <p>Fake AI Shield &nbsp; All right reserved &copy; 2025</p>
      </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const btn = document.querySelector(".nav-btn");
        const cls = document.querySelector(".fa-solid");
        const body = document.body;

        
        if (localStorage.getItem("theme") === "dark") {
            body.classList.add("light-mode");
            cls.classList.remove("fa-moon");
            cls.classList.add("fa-sun");
        } else {
            cls.classList.add("fa-moon");
        }

        
        btn.addEventListener("click", () => {
            body.classList.toggle("light-mode");
            cls.classList.toggle("fa-sun");
            cls.classList.toggle("fa-moon");


            
            localStorage.setItem("theme", body.classList.contains("light-mode") ? "dark" : "light");
        });
    </script>
    </body>
</html>
