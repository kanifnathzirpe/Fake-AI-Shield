<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Form</title>
    <link rel="stylesheet" href="/css/contact.css">
    <link rel="stylesheet" href="/css/nav.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        
        body {
            background-color: white;
            color: black;
            transition: background-color 0.3s, color 0.3s;
        }

        .navbar-custom {
            background-color: #f3f4f6; 
            padding: 15px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .nav-link {
            text-decoration: none;
            color: rgb(255, 255, 255);
            margin: 0 10px;
            font-size: 18px;
            background-color: rgb(25, 25, 25);
        }

        .nav-btn {
            padding: 8px 16px;
            background-color: #ccc;
            border: none;
            cursor: pointer;
            border-radius: 5px;
        }

        
        .light-mode {
            background-color: #ffffff !important; 
            color: rgb(0, 0, 0) !important;
        }

        .light-mode .navbar-custom  {
            background-color: #ffffff !important;
        }

        .light-mode .nav-links a {
            color: white !important;
        }

        .light-mode .nav-btn {
            background-color: #4a5568 !important;
            color: white !important;
        }
    </style>
</head>
<body>
    <%- include('nav') %>
    <div class="custom-form">
        <h2 class="conthead">Contact Us</h2><br>
        <form action="/" method="post">
            <div class="mb-3">
              <label for="exampleInputName1" class="form-label">Name: </label>
              <input name="uname" type="text" class="form-control" id="exampleInputName1" aria-describedby="NameHelp">
            </div>
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label">Email address: </label>
              <input name="umail" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
            </div>
            <div class="mb-3">
              <label for="examplemobile" class="form-label">Mobile No.</label>
              <input name="umobile" type="number" class="form-control" id="examplemobile">
            </div>
            <div class="mb-3">
              <label for="example" class="form-label">Message: </label><br>
              <textarea name="umsg" cols="50" rows="5" name="message" id=""></textarea>
            </div>
            <div class="mb-3 form-check">
              <input type="checkbox" class="form-check-input" id="exampleCheck1" required>
              <label class="form-check-label" for="exampleCheck1">I agree the Terms and Conditions.</label>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        <p id="responseMessage" class="mt-2 text-center text-green-600"></p>
    </div>
    <div class="footer">
        <p>Fake AI Shield &nbsp; All right reserved &copy; 2025</p>
      </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const btn = document.querySelector(".nav-btn");
        const cls = document.querySelector(".fa-solid");
        const body = document.body;

        
        if (localStorage.getItem("theme") === "dark") {
            body.classList.add("light-mode");
            cls.classList.remove("fa-moon");
            cls.classList.add("fa-sun");
        } else {
            cls.classList.add("fa-moon");
        }

        
        btn.addEventListener("click", () => {
            body.classList.toggle("light-mode");
            cls.classList.toggle("fa-sun");
            cls.classList.toggle("fa-moon");


            
            localStorage.setItem("theme", body.classList.contains("light-mode") ? "dark" : "light");
        });
    </script>
</body>
</html>
